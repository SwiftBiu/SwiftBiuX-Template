{
  "identifier": "com.SwiftBiu.gemini",
  "name": "Gemini",
  "author": "SwiftBiu",
  "description": "Send the selected text to Google Gemini and get the response.",
  "version": "1.0",
  "actions": [
    {
      "title": "Gemini",
      "script": "script.js"
    }
  ],
  "icon": "gemini.png",
  "iconType": "file",
  "permissions": [
    "network",
    "paste",
    "notifications"
  ],
  "configuration": [
    {
      "key": "apikey",
      "label": "Gemini API Key",
      "placeholder": "Enter your Gemini API key",
      "description": "Obtain an API key from Google AI Studio.",
      "type": "secure"
    },
    {
      "key": "apiurl",
      "label": "API URL",
      "type": "string",
      "placeholder": "e.g., https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent",
      "description": "Custom Gemini API endpoint. Leave blank for default.",
      "isSecure": false
    },
    {
      "key": "model",
      "label": "Model",
      "type": "option",
      "description": "The model to use.",
      "options": [
        {
          "label": "Gemma 3n-e4b-it",
          "value": "gemma-3n-e4b-it"
        },
        {
          "label": "Gemini 2.0 Flash Lite",
          "value": "gemini-2.0-flash-lite"
        },
        {
          "label": "Gemini 2.0 Flash",
          "value": "gemini-2.0-flash"
        },
        {
          "label": "Gemini 2.5 Flash Lite",
          "value": "gemini-flash-lite-latest"
        },
        {
          "label": "Gemini 2.5 Flash",
          "value": "gemini-flash-latest"
        },
        {
          "label": "Gemini 2.5 Pro",
          "value": "gemini-2.5-pro"
        }
      ]
    },
    {
      "key": "contextMessageCount",
      "label": "上下文消息数量",
      "type": "string",
      "default": "0",
      "placeholder": "0-10",
      "description": "设置发送给 AI 的历史消息数量。0 表示不带上下文，最高可设置 10 条。"
    },
    {
      "key": "systemRoles",
      "label": "System Roles",
      "type": "radioList",
      "description": "Define custom roles for the AI assistant.",
      "defaultItems": [
        {
          "enabled": true,
          "value": "You are a helpful assistant."
        },
        {
          "enabled": false,
          "value": "You are a professional translator."
        }
      ]
    }
  ]
}